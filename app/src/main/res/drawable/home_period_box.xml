<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimaryDark"/>
            <corners android:radius="2dp"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorSeparatorDivider"/>
            <corners android:radius="2dp"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>
</selector>